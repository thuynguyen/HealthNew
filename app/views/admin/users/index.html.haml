%h1 Listing users

%table.table.table-striped.table-hover
  %thead
    %tr
      %th Name
      %th Email
      %th First Name
      %th Last Name
      %th
      %th
      %th
  %tbody
    - @users.each do |user|
      %tr
        %td= "#{user.first_name} #{user.last_name}"
        %td= user.email
        %td= user.first_name
        %td= user.last_name
        %td= link_to 'Show', [:admin, user]
        %td= link_to 'Edit', edit_admin_user_path(user)
        %td= link_to 'Destroy', [:admin, user], :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New User', new_admin_user_path
