- model_class = Service
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @service.name
%p
  %strong= model_class.human_attribute_name(:price) + ':'
  %br
  = @service.price


.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_services_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_service_path(@service), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_service_path(@service), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
