- model_class = Patient
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:age)
      %th= model_class.human_attribute_name(:year)
      %th= model_class.human_attribute_name(:address)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @patients.each do |patient|
      %tr
        %td= link_to patient.id, patient_path(patient)
        %td= patient.name
        %td= patient.age
        %td= patient.year
        %td= patient.address
        %td= patient.user_id
        %td=l patient.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_patient_path(patient), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), patient_path(patient), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_patient_path, :class => 'btn btn-primary'
